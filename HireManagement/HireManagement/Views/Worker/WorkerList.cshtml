@model ICollection<HireManagement.Models.Worker>
<h2>Workers List View </h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>City</th>
                <th>Joined</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var worker in Model)
            {
            <tr>
                <td>@worker.ID</td>
                <td>@worker.FirstName</td>
                <td>@worker.LastName</td>
                <td>@worker.Age</td>
                <td>@worker.City</td>
                <td>@worker.JoinedDate</td>
            </tr>
            }
        </tbody>
    </table>